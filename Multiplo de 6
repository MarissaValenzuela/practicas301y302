namespace Multiplo_de_6
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void button1_Click(object sender, EventArgs e)
        {
            //Variables
            int numero, residuo;
            numero = System.Int32.Parse(txtNum.Text);
            residuo = numero % 6;

            if (residuo == 0)
            {
                lblMultiplo.Text = "MULTIPLO";
            }
            else
            {
                lblMultiplo.Text = "NO MULTIPLO";
            } 
        }

        private void button2_Click(object sender, EventArgs e)
        {
            Close();
        }
    }
}
